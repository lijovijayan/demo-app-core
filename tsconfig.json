{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src/",
        "paths": {
            "@models": ["models"],
            "@routes": ["routes"],
            "@controllers": ["controllers"],
            "@config": ["config"],
            "@services": ["services"],
            "@utils": ["utils"],
            "@types": ["types"],
            "@aggregations": ["aggregations"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@controllers/*": ["controllers/*"],
            "@config/*": ["config/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@types/*": ["types/*"],
            "@aggregations/*": ["aggregations/*"]
        },
        "experimentalDecorators": true
    },
    "lib": ["ES6"]
}
